<UserControl x:Class="MusicMessage.UserCtrls.PostDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicMessage.UserCtrls"
             xmlns:conv="clr-namespace:MusicMessage.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:AvatarPathToImageConverter x:Key="AvatarPathToImageConverter"/>
        <conv:PostImageConverter x:Key="PostImageConverter"/>
        <conv:IsOwnPostConverter x:Key="IsOwnPostConverter"/>
        <conv:NotEmptyToBoolConverter x:Key="NotEmptyToBoolConverter"/>
        <conv:DateTimeToLocalConverter x:Key="DateTimeToLocalConverter"/>
        <conv:IsCommentLikedToColorConverter x:Key="IsCommentLikedToColorConverter"/>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CommentContainerStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <TextBlock x:Name="placeholderTextBlock" 
                                       Text="напишите комментарий..." 
                                       Foreground="Gray" 
                                       Margin="5,0"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="2,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholderTextBlock" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="placeholderTextBlock" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ClickableAreaStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ClickableTextStyle" TargetType="TextBlock">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrush}}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка назад -->
        <Button Grid.Row="0"
                Content="{Binding BackButtonText}" 
                Command="{Binding ClosePostDetailsCommand}"
                Style="{StaticResource ActionButtonStyle}"
                HorizontalAlignment="Left"
                Margin="20,10,20,10"/>

        <!-- Основной контент с прокруткой -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,0">
            <StackPanel>
                <!-- Пост -->
                <Border Background="White" CornerRadius="8" Padding="20" BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel>
                        <!-- Заголовок поста -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Аватар автора -->
                            <Border Width="50" Height="50" CornerRadius="25" Background="LightGray" Grid.Column="0">
                                <Image Source="{Binding CurrentPost.Author.AvatarPath, Converter={StaticResource AvatarPathToImageConverter}}"
                                       Stretch="UniformToFill">
                                    <Image.Clip>
                                        <EllipseGeometry RadiusX="25" RadiusY="25" Center="25,25"/>
                                    </Image.Clip>
                                </Image>
                            </Border>

                            <!-- Информация об авторе -->
                            <StackPanel Grid.Column="1" Margin="15,0">
                                <TextBlock Text="{Binding CurrentPost.Author.FullName}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{Binding CurrentPost.CreatedAt, 
                  Converter={StaticResource DateTimeToLocalConverter}, 
                  StringFormat='{}{0:dd.MM.yyyy в HH:mm}'}" 
                                           Foreground="Gray" FontSize="12"/>
                            </StackPanel>

                            <!-- Кнопка удаления -->
                            <Button Grid.Column="2" 
                                    Content="✕" 
                                    Command="{Binding DeletePostCommand}"
                                    ToolTip="Удалить пост"
                                    Style="{StaticResource ActionButtonStyle}"
                                    FontSize="16"
                                    Visibility="{Binding CurrentPost.AuthorId, 
                                        Converter={StaticResource IsOwnPostConverter}}"/>
                        </Grid>

                        <!-- Содержимое поста -->
                        <TextBlock Text="{Binding CurrentPost.Content}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,15,0,0"
                                   FontSize="14"/>

                        <!-- Изображение поста -->
                        <Image Source="{Binding CurrentPost.ImagePath, Converter={StaticResource PostImageConverter}}"
                               MaxHeight="500"
                               Stretch="Uniform"
                               Margin="0,15,0,0"
                               Visibility="{Binding CurrentPost.ImagePath, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Статистика и действия -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button Content="{Binding CurrentPost.LikesCount, StringFormat='👍 {0}'}" 
                                    Command="{Binding ToggleLikeCommand}"
                                    Style="{StaticResource ActionButtonStyle}"/>

                            <TextBlock Text="{Binding CurrentPost.CommentsCount, StringFormat='💬 {0}'}" 
                                       VerticalAlignment="Center" Margin="15,0,0,0"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Заголовок комментариев -->
                <TextBlock Text="Комментарии" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,30,0,15"/>

                <!-- Список комментариев -->
                <ItemsControl ItemsSource="{Binding Comments}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CommentContainerStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Аватар автора комментария -->
                                    <Button Style="{StaticResource ClickableAreaStyle}"
                                            Command="{Binding DataContext.CommentOpenProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            ToolTip="Открыть профиль"
                                            Padding="0">
                                        <Border Width="40"
                                          Height="40"
                                             CornerRadius="20"
                                             Background="LightGray" Grid.Column="0">
                                            <Image Source="{Binding Author.AvatarPath, Converter={StaticResource AvatarPathToImageConverter}}"
                                               Stretch="UniformToFill">
                                                <Image.Clip>
                                                    <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20"/>
                                                </Image.Clip>
                                            </Image>
                                        </Border>
                                    </Button>
                                    <!-- Содержимое комментария -->
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding Author.FullName}" 
                                                   FontWeight="Bold" FontSize="13"/>
                                        <TextBlock Text="{Binding Content}" 
                                                   TextWrapping="Wrap" 
                                                   Margin="0,2,0,5"
                                                   FontSize="13"/>

                                        <!-- строка с лайками и временем -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Button Command="{Binding DataContext.ToggleCommentLikeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Padding="5,2"
                                                    Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="👍" 
                                                               FontSize="11"
                                                               Foreground="{Binding IsLikedByCurrentUser, Converter={StaticResource IsCommentLikedToColorConverter}}"/>
                                                    <TextBlock Text="{Binding LikesCount}" 
                                                               Margin="5,0,0,0"
                                                               FontSize="11"
                                                               Foreground="#1976D2"
                                                               FontWeight="Bold"/>
                                                </StackPanel>
                                            </Button>

                                            <TextBlock Text="{Binding CreatedAt, 
                                                              Converter={StaticResource DateTimeToLocalConverter}, 
                                                              StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                                       Foreground="Gray" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Индикатор загрузки -->
                <ProgressBar Height="3" 
                             IsIndeterminate="{Binding IsLoading}"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                             Margin="0,20"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Поле для написания комментария - ВСЕГДА ВНИЗУ -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderThickness="1,1,0,0" 
                BorderBrush="#E0E0E0"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Поле ввода -->
                <TextBox Grid.Column="0"
                         Text="{Binding NewCommentText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource PlaceholderTextBoxStyle}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MinHeight="40"
                         MaxHeight="80"
                         VerticalScrollBarVisibility="Auto"
                         Padding="10"
                         FontSize="13"/>

                <!-- Кнопка отправки -->
                <Button Grid.Column="1"
                        Content="Отправить" 
                        Command="{Binding AddCommentCommand}"
                        Background="#1976D2"
                        Foreground="White"
                        Margin="10,0,0,0"
                        Padding="20,10"
                        MinWidth="80"
                        IsEnabled="{Binding NewCommentText, Converter={x:Static conv:NotEmptyToBoolConverter.Default}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>