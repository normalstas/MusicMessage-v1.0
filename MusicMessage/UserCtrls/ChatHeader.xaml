<UserControl x:Class="MusicMessage.UserCtrls.ChatHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicMessage.UserCtrls"
             mc:Ignorable="d" 
             Height="60"
             d:DesignWidth="400">
    <UserControl.Resources>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrush}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#10000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrush}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#10000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AvatarImageStyle" TargetType="Image">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
        </Style>

        <Style x:Key="ClickableAreaStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <Style x:Key="ClickableTextStyle" TargetType="TextBlock">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrush}}"/>

        </Style>

 
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource {x:Static SystemColors.WindowBrush}}"
            BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrush}}"
            BorderThickness="0,0,0,1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
           
                <ColumnDefinition Width="Auto"/>
           
                <ColumnDefinition Width="*"/>
            
                <ColumnDefinition Width="Auto"/>
      
            </Grid.ColumnDefinitions>

            <!-- Кнопка назад -->
            <Button Grid.Column="0" 
                    Content="←" 
                    FontSize="16"
                    Style="{StaticResource BackButtonStyle}"
                    Command="{Binding BackCommand}"
                    Margin="10,0,5,0"/>

            <!-- Аватарка  -->
            <Button Grid.Column="1"
                    Style="{StaticResource ClickableAreaStyle}"
                    Command="{Binding OpenProfileCommand}"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    ToolTip="Открыть профиль"
                    Padding="0">

                <Border Width="40"
                        Height="40"
                        CornerRadius="20"
                        Background="LightGray">

                    <Image Source="{Binding ChatHeader.AvatarImage}"
                           Style="{StaticResource AvatarImageStyle}">
                        <Image.Clip>
                            <EllipseGeometry RadiusX="20" RadiusY="20" Center="20,20"/>
                        </Image.Clip>
                    </Image>
                </Border>
            </Button>

            <!-- Информация о собеседнике -->
            <Button Grid.Column="2" 
                    Style="{StaticResource ClickableAreaStyle}"
                    Command="{Binding OpenProfileCommand}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"
                    ToolTip="Открыть профиль"
                    Padding="8,2">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding ChatHeader.OtherUser.FullName}" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               Style="{StaticResource ClickableTextStyle}"/>

                    <TextBlock Text="{Binding ChatHeader.StatusText}"
                               Style="{StaticResource StatusTextStyle}"/>
                </StackPanel>
            </Button>

            <!-- Кнопки действий -->
            <StackPanel Grid.Column="3" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0">

                <Button Content="📞" 
                        Style="{StaticResource MenuButtonStyle}"
                        ToolTip="Голосовой вызов"
                        Command="{Binding VoiceCallCommand}"/>

                <Button Content="📹" 
                        Style="{StaticResource MenuButtonStyle}"
                        ToolTip="Видеозвонок"
                        Command="{Binding VideoCallCommand}"/>

                <Button Content="⋮" 
                        Style="{StaticResource MenuButtonStyle}"
                        ToolTip="Меню чата"
                        Command="{Binding ChatMenuCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
