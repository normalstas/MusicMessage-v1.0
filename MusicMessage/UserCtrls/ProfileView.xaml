<UserControl x:Class="MusicMessage.UserCtrls.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicMessage.UserCtrls"
             xmlns:conv="clr-namespace:MusicMessage.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:FriendshipStatusToVisibilityConverter x:Key="FriendshipStatusToVisibilityConverter"/>
        <conv:AvatarPathToImageConverter x:Key="AvatarPathToImageConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <conv:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter"/>
        <conv:IsOwnPostConverter x:Key="IsOwnPostConverter"/>
        <conv:PostImageConverter x:Key="PostImageConverter"/>

        <Style x:Key="ProfileButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
       
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Обложка -->
            <Border Grid.Row="0" Background="LightGray">
                <Image Source="{Binding CoverImage, FallbackValue={x:Null}}" Stretch="UniformToFill">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CoverImage}" Value="{x:Null}">
                                    <Setter Property="Opacity" Value="0.3"/>
                                    <Setter Property="Source" Value="{x:Null}"/>  
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Border>
          
            <!-- Аватар и информация -->
            <Grid Grid.Row="1" Margin="20,-50,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Аватар -->
                <Border Width="100" Grid.Row="0" Height="100" CornerRadius="50" Background="White" Padding="2">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding AvatarImage}" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>

                <!-- Информация -->
                <StackPanel Grid.Row="1" Margin="20,0">
                    <TextBlock Text="{Binding ViewedUser.FullName, Mode=OneWay}" 
                              FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding ViewedUser.Age, Mode=OneWay, StringFormat='Возраст: {0} лет'}"
                              Visibility="{Binding ViewedUser.Age, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding ViewedUser.Location, Mode=OneWay}"/>
                    <TextBlock Text="{Binding FriendshipStatus, Mode=OneWay}"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Vertical">
                    <Button Content="Редактировать" 
        Command="{Binding EditProfileCommand}"
        Visibility="{Binding IsOwnProfile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="Написать" Command="{Binding StartChatCommand}"
                           Visibility="{Binding IsOwnProfile, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                </StackPanel>
            </Grid>
          
            <!-- Контент -->
            <TabControl Grid.Row="2" Margin="20">
                <TabItem Header="О себе">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding ViewedUser.Bio, Mode=OneWay}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding ViewedUser.Location, Mode=OneWay, StringFormat='Местоположение: {0}'}" 
                                  Margin="0,10,0,0" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Посты">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Блок создания поста в профиле -->
                        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="10" 
    BorderThickness="1" BorderBrush="#E0E0E0"
    Visibility="{Binding IsOwnProfile, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBox Text="{Binding NewProfilePostContent, UpdateSourceTrigger=PropertyChanged}"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         MinHeight="60"
         MaxHeight="120"
         VerticalScrollBarVisibility="Auto"
         Padding="10"/>

                                <!-- Предпросмотр изображения -->
                                <Image Source="{Binding SelectedProfileImage}"
       MaxHeight="200"
       Stretch="Uniform"
       Margin="0,10,0,0"
       Visibility="{Binding SelectedProfileImage, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!-- Кнопки действий -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="📷 Фото" 
            Command="{Binding AddProfileImageCommand}"
            Style="{StaticResource ActionButtonStyle}"/>

                                    <Button Grid.Column="2" Content="✕" 
            Command="{Binding DataContext.DeletePostCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CommandParameter="{Binding}"
            Style="{StaticResource ActionButtonStyle}"
            Visibility="{Binding AuthorId, Converter={StaticResource IsOwnPostConverter}}"/>
                                    <Button Content="📤 Опубликовать" 
            Command="{Binding CreateProfilePostCommand}"
            Background="#1976D2"
            Foreground="White"
            Margin="10,0,0,0"
            Padding="15,5"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Заголовок постов -->
                        <TextBlock Grid.Row="1" Text="{Binding UserPosts.Count, StringFormat='Постов: {0}'}" 
       Margin="10,5" FontWeight="Bold"/>

                        <!-- Список постов пользователя -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding UserPosts}"  Margin="10,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                    BorderThickness="1" BorderBrush="#E0E0E0">
                                            <StackPanel>
                                                <!-- Заголовок поста -->
                                                <Grid Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                                   Foreground="Gray" FontSize="12"/>

                                                    <Button Grid.Column="2" Content="✕" 
                                Command="{Binding DataContext.DeletePostInProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ActionButtonStyle}"
                                Visibility="{Binding AuthorId, Converter={StaticResource IsOwnPostConverter}}"/>
                                                </Grid>

                                                <!-- Содержимое поста -->
                                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                                <!-- Изображение поста -->
                                                <Image Source="{Binding ImagePath, Converter={StaticResource PostImageConverter}}"
                           MaxHeight="300"
                           Stretch="Uniform"
                           Visibility="{Binding ImagePath, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                <!-- Статистика -->
                                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                    <TextBlock Text="{Binding LikesCount}" Foreground="#1976D2" FontWeight="Bold"/>
                                                    <TextBlock Text=" лайков" Margin="5,0,15,0" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding CommentsCount}" Foreground="#1976D2" FontWeight="Bold"/>
                                                    <TextBlock Text=" комментариев" Margin="5,0,0,0" Foreground="Gray"/>
                                                </StackPanel>

                                                <!-- Действия с постом -->
                                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                    <Button Content="👍 Нравится" 
                                Command="{Binding DataContext.ToggleLikeInProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ActionButtonStyle}"/>

                                                    <Button Content="💬 Комментировать" 
                                Command="{Binding DataContext.ShowPostCommentsInProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ActionButtonStyle}"
                                Margin="10,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Друзья">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Margin="10"
                  Text="{Binding FriendsCount, StringFormat='Друзей: {0}'}"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding MutualFriends}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="2" Background="White" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="40" Height="40" CornerRadius="50" Background="White" Padding="2">
                                                <Ellipse>
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding AvatarPath, Converter={StaticResource AvatarPathToImageConverter}}" 
                                                             Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Border>

                                            <TextBlock Grid.Column="1" Text="{Binding FullName, Mode=OneWay}" 
                                      VerticalAlignment="Center" Margin="10,0"/>

                                            <Button Grid.Column="2" Content="Профиль"
        Command="{Binding DataContext.ShowFriendProfileCommand, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
        CommandParameter="{Binding UserId}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem>

                <TabItem Header="Статистика">
                    <StackPanel Margin="10">
                        <!--<TextBlock Text="{Binding PostsCount, StringFormat='Сообщений: {0}'}"/>-->
                        <TextBlock Text="{Binding FriendsCount, StringFormat='Друзей: {0}'}" Margin="0,10,0,0"/>
                        <TextBlock Margin="0,10,0,0">
            <Run Text="Статус: "/>
            <Run Text="{Binding ViewedUser.Status, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</UserControl>