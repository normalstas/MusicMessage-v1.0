<UserControl x:Class="MusicMessage.UserCtrls.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicMessage.UserCtrls"
             xmlns:conv="clr-namespace:MusicMessage.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:FriendshipStatusToVisibilityConverter x:Key="FriendshipStatusToVisibilityConverter"/>
        <conv:AvatarPathToImageConverter x:Key="AvatarPathToImageConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <Style x:Key="ProfileButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Обложка -->
            <Border Grid.Row="0" Background="LightGray">
                <Image Source="{Binding CoverImage, FallbackValue={x:Null}}" Stretch="UniformToFill">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CoverImage}" Value="{x:Null}">
                                    <Setter Property="Opacity" Value="0.3"/>
                                    <Setter Property="Source" Value="{x:Null}"/>  
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Border>
          
            <!-- Аватар и информация -->
            <Grid Grid.Row="1" Margin="20,-50,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Аватар -->
                <Border Width="100" Grid.Row="0" Height="100" CornerRadius="50" Background="White" Padding="2">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding AvatarImage}" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>

                <!-- Информация -->
                <StackPanel Grid.Row="1" Margin="20,0">
                    <TextBlock Text="{Binding ViewedUser.FullName, Mode=OneWay}" 
                              FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding ViewedUser.Age, Mode=OneWay, StringFormat='Возраст: {0} лет'}"
                              Visibility="{Binding ViewedUser.Age, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding ViewedUser.Location, Mode=OneWay}"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Vertical">
                    <Button Content="Редактировать" 
        Command="{Binding EditProfileCommand}"
        Visibility="{Binding IsOwnProfile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="Написать" Command="{Binding StartChatCommand}"
                           Visibility="{Binding IsOwnProfile, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                </StackPanel>
            </Grid>

            <!-- Контент -->
            <TabControl Grid.Row="2" Margin="20">
                <TabItem Header="О себе">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding ViewedUser.Bio, Mode=OneWay}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding ViewedUser.Location, Mode=OneWay, StringFormat='Местоположение: {0}'}" 
                                  Margin="0,10,0,0" FontWeight="Bold"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Друзья">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Margin="10"
                  Text="{Binding FriendsCount, StringFormat='Друзей: {0}'}"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding MutualFriends}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="2" Background="White" CornerRadius="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="40" Height="40" CornerRadius="50" Background="White" Padding="2">
                                                <Ellipse>
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding AvatarPath, Converter={StaticResource AvatarPathToImageConverter}}" 
                                                             Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Border>

                                            <TextBlock Grid.Column="1" Text="{Binding FullName, Mode=OneWay}" 
                                      VerticalAlignment="Center" Margin="10,0"/>

                                            <Button Grid.Column="2" Content="Профиль"
        Command="{Binding DataContext.ShowFriendProfileCommand, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
        CommandParameter="{Binding UserId}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem>

                <TabItem Header="Статистика">
                    <StackPanel Margin="10">
                        <!--<TextBlock Text="{Binding PostsCount, StringFormat='Сообщений: {0}'}"/>-->
                        <TextBlock Text="{Binding FriendsCount, StringFormat='Друзей: {0}'}" Margin="0,10,0,0"/>
                        <TextBlock Margin="0,10,0,0">
            <Run Text="Статус: "/>
            <Run Text="{Binding ViewedUser.Status, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</UserControl>