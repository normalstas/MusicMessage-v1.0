<Application x:Class="MusicMessage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MusicMessage">
    <Application.Resources>
        <Style x:Key="MyMessageBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="CornerRadius" Value="10,10,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="MaxWidth" Value="300"/>
        </Style>

        <Style x:Key="OtherMessageBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="LightGreen"/>
            <Setter Property="CornerRadius" Value="10,10,10,0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="MaxWidth" Value="300"/>
        </Style>
    </Application.Resources>
</Application>
